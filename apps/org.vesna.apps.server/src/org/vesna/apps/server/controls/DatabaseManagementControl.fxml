<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" 
         fx:controller="org.vesna.apps.server.controls.DatabaseManagementControlController"
         spacing="10" >
    <GridPane VBox.vgrow="ALWAYS">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0"
               text="Tables"/>
        <ListView fx:id="tablesList" 
                  GridPane.columnIndex="0" GridPane.rowIndex="1"
                  minWidth="150" >
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="deleteTableMenuItem"  text="Delete" 
                                  onAction="#handleActionDeleteTable"
                                  onMenuValidation="#handleValidateDeleteTable" /> 
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView> 
        <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="0">
            <left>
                <HBox spacing="10">
                    <children>
                        <Button fx:id="addRowButton" text="Add" 
                                onAction="#handleActionAddRow" />
                        <Button fx:id="editRowButton" text="Edit" 
                                onAction="#handleActionEditRow" />
                        <Button fx:id="deleteRowButton" text="Remove"
                                onAction="#handleActionDeleteRow" /> 
                    </children>
                </HBox>
            </left>
            <right>
                <Label fx:id="tableNameLabel"
                       BorderPane.alignment="CENTER_RIGHT" /> 
            </right>
        </BorderPane>
        <TableView fx:id="rowsTable"
                   GridPane.columnIndex="1" GridPane.rowIndex="1" 
                   GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"/> 
    </GridPane>
</fx:root>
