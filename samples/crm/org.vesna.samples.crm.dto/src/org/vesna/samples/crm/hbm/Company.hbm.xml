<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.vesna.samples.crm.dto.Company" table="companies">
      <id name="companyID" type="integer" column="company_ID" access="property">
          <generator class="identity"/>
      </id>
      <property name="shortName" type="text" column="short_name" length="100"/>
      <property name="longName" type="text" column="long_name" length="200"/>
      <property name="homepageUrl" type="text" column="homepage_url" length ="200"/>
      <property name="comments" type="text" column="comments" length="4000"/>
  </class>
</hibernate-mapping>
