<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
      HBox.hgrow="ALWAYS">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
        </rowConstraints>
        <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="shortNameText" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Longt name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField  fx:id="longNameText" maxWidth="600.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Homepage URL" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="homepageUrlText" maxWidth="600.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Comments" GridPane.columnIndex="0" GridPane.rowIndex="3" alignment="TOP_LEFT"/>
        <TextArea fx:id="commentsText" maxWidth="600.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TabPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
            <Tab text="Employess">
                <org.vesna.samples.crm.client.controls.EmployeeList fx:id="employeesList" />
            </Tab>
        </TabPane>
    </GridPane>
</VBox>
